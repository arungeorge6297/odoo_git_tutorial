<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="student_management_tree_view" model="ir.ui.view">
        <field name="name">Student Tree View</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <tree decoration-success="gender == 'male'" decoration-info="gender == 'female'">
                <field name="name"/>
                <field name="roll_no"/>
                <field name="admission_date"/>
                <field name="gender"/>
                <field name="student_image" widget="image" width="50px"/>
                <field name="school_id"/>
                <field name="standard"/>
                <field name="student_age"/>
            </tree>
        </field>
    </record>

    <record id="student_management_form_view" model="ir.ui.view">
        <field name="name">Student Form View</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_mail" type="object" string="Send Email" class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="student_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <span class="o_form_label o_td_label" name="address_name">
                                <b>Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"/>
                            </div>
                            <field name="standard"/>
                        </group>

                        <group>
                            <field name="admission_date"/>
                            <field name="school_id"/>
                            <field name="email"/>
                            <field name="teacher_id"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="roll_no"/>
                                    <field name="student_age"/>
                                    <field name="contact_number" options="{'format':0}"/>
                                </group>
                            </page>

                            <page string="Other Info">
                                <group>
                                    <field name="bdate"/>
                                    <field name="gender"/>
                                    <field name="guardian_name"/>
                                </group>
                            </page>

                            <page string="Student Documents">
                                <group>
                                    <field name="student_documents" widget="many2many_binary"/>
                                </group>
                            </page>
                            <page string="Student Results">
                                <group>
                                    <field name="result_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="student_property_view_kanban" model="ir.ui.view">
        <field name="name">Student Kanban View</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="admission_date"/>
                <field name="roll_no"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('student.management', 'student_image', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <t class="o_kanban_record_title">
                                    <strong t-esc="record.name.value"/>
                                </t>
                                <div t-if="record.admission_date.value">
                                    <p>
                                        <strong>Admission Date:</strong>
                                        <t t-esc="record.admission_date.value"/>
                                    </p>
                                </div>
                                <div t-if="record.roll_no.value">
                                    <p>
                                        <strong>Roll No:</strong>
                                        <t t-esc="record.roll_no.value"/>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="student_management_action" model="ir.actions.act_window">
        <field name="name">Student Details</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>
